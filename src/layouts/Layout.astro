---
import "./src/styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>

    <!-- importacion de iconos de google -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
  </head>
  <body class="w-full fixed h-screen flex flex-col">
    <nav
      class="flex-0 fixed z-50 inset-x-0 bottom-0 md:top-0 bg-indigo-700 text-white font-bold flex justify-evenly md:justify-end md:gap-6 w-full py-4 px-6 rounded-t-2xl md:rounded-none h-14"
    >
      <div>
        <a href="/">
          <span
            class="material-symbols-outlined hover:text-indigo-700 rounded-2xl hover:p-2 text-center cursor-pointer hover:scale-130 transition-transform duration-200 hover:bg-white"
            >home</span
          >
        </a>
      </div>
      <div>
        <a href="/search">
          <span 
          class="material-symbols-outlined hover:text-indigo-700 rounded-2xl hover:p-2 text-center cursor-pointer hover:scale-130 transition-transform duration-200 hover:bg-white"
          >search</span
          >
        </a>
      </div>
      <div>
        <a href="/login">
          <span
            class="material-symbols-outlined hover:text-indigo-700 rounded-2xl hover:p-2 text-center cursor-pointer hover:scale-130 transition-transform duration-200 hover:bg-white"
            >people</span
          >
        </a>
      </div>
    </nav>
    <div class="flex-1 flex flex-col gap-4 p-4 md:p-0 mb-14 md:mb-0 md:mt-14">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
